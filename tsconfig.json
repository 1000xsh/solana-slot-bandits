{
  "include": ["./src/**/*.ts", "./src/**/**/*.ts","./src/**/**/**/*.ts","./src/**/**/**/**/*.ts", ],
  "compilerOptions": {
    "target": "es2022",                              

    "module": "commonjs",                               
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,        
    "strict": true,
    "skipLibCheck": true
  }
}
